#!/usr/bin/env bash

# creates a new file and open with sublime
nf(){
	touch "$@" && subl "$@"
}

mk(){
	mkdir "$@" && cd "$1"
}

function dwnl(){
	which youtube-dl > /dev/null 2>&1
	if [ $? -ne 0 ]; then
		echo "Youtube-dl not installed"
	else
		youtube-dl --extract-audio --prefer-ffmpeg --audio-format mp3 "$1"
	fi
}